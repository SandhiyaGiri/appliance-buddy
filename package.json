{
  "name": "home-appliance-tracker",
  "version": "1.0.0",
  "description": "Home Appliance Tracker - Full Stack Application",
  "private": true,
  "packageManager": "npm@10.9.0",
  "workspaces": [
    "backend",
    "appliance-buddy"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:backend": "turbo run dev --filter=appliance-tracker-backend",
    "dev:frontend": "turbo run dev --filter=vite_react_shadcn_ts",
    "build": "turbo run build",
    "build:backend": "turbo run build --filter=appliance-tracker-backend",
    "build:frontend": "turbo run build --filter=vite_react_shadcn_ts",
    "build:full": "npm run build",
    "start": "turbo run start --parallel",
    "start:backend": "turbo run start --filter=appliance-tracker-backend",
    "start:frontend": "turbo run start --filter=vite_react_shadcn_ts",
    "lint": "turbo run lint --parallel",
    "install:all": "npm install",
    "clean": "rm -rf node_modules backend/node_modules appliance-buddy/node_modules",
    "railway:deploy": "./deploy-railway.sh"
  },
  "devDependencies": {
    "turbo": "^2.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/homeappliances.git"
  },
  "keywords": [
    "appliance-tracker",
    "warranty-management",
    "maintenance-scheduling",
    "react",
    "express",
    "supabase"
  ],
  "author": "Your Name",
  "license": "MIT"
}
